<div class="midwidth">
  <div class="data-form">
    <form action="/posts/update/<%= post.id %>" method="POST">
      <div class="form-group">
        <label for="titleInput"
          >Title　　　　　　　　　　　　　　　　　　　　　　　　30字以内</label
        >
        <input
          value="<%= post.title %>"
          type="text"
          name="title"
          class="form-control"
          id="inputTitle"
          maxlength="30"
          rows="1"
        />
      </div>
      <div class="form-group">
        <label for="content"
          >Content　　　　　　　　　　　　　　　　　　　　　　140字以内</label
        >
        <textarea
          class="form-control h-25"
          type="text"
          name="content"
          id="inputContent"
          maxlength="140"
          rows="3"
        ><%= post.content %></textarea>
      </div>
      <br />
      <button class="btn btn-sm btn-primary btn-block w-25" type="submit">
        update post
      </button>
    </form>
  </div>
</div>
