<div class="midwidth">
  <div class="data-form">
    <form action="/users/update/<%= user[0].id %>" method="POST">
      <h2>Edit:</h2>
      <label for="inputName">Name</label>
      <input class="form-control" type="name" name="name" id="inputName" value="<%= user[0].name %>" required>
      <label for="inputEmail">Email address</label>
      <input class="form-control" type="email" name="email" id="inputEmail" value="<%= user[0].email %>" required>
      <label for="inputPassword">Password</label>
      <input class="form-control" type="password" name="password" id="inputPassword" value="<%= user[0].password %>" required>
      <br>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
    </form>
  </div>
</div>
