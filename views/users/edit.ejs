<div class="midwidth">
  <div class="data-form">
    <form action="/users/update/<%= user.id %>" method="POST">
      <h2>Edit:</h2>
      <label for="inputName">Name</label>
      <input class="form-control" type="name" name="name" id="inputName" value="<%= user.name %>" required>
      <label for="inputEmail">Email address</label>
      <input class="form-control" type="email" name="email" id="inputEmail" value="<%= user.email %>" required>
      <label for="inputPassword">Password</label>
      <input class="form-control" type="password" name="password" id="inputPassword" value="<%= user.password %>" required>
      <br>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
    </form>
  </div>
</div>
